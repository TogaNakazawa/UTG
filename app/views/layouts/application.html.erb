<!DOCTYPE html>
<html>
  <head>
    <title>Utg2</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

<header>
          <div class="header-logo">
        <% if @current_user %>
          <%= link_to("UTGathering", "/posts/index") %>
        <% else %>
          <%= link_to("UTGathering", "/") %>
        <% end %>

          </div>
  <ul class="header-menus">
    <% if user_signed_in? %>
      <li>
        <%= link_to "MyPage", "/users/#{current_user.id}" %>
      </li>
      <li>
        <%= link_to("投稿一覧", "/posts/index") %>
      </li>
      <li>
        <%= link_to("新規投稿", "/posts/new") %>
      </li>
      <li>
        <%= link_to("Friends", "/users/index") %>
      </li>
      <li>
        <%= link_to "ログアウト", { :controller => "devise/sessions", :action => "destroy"},:method => :delete%>
      </li>
    <% else %>
      <li>
        <%= link_to("UTGとは", "/about") %>
      </li>
      <li>
        <%= link_to("新規登録", { :controller => "devise/registrations", :action => "new"}) %>
      </li>
      <li>
        <%= link_to("ログイン", new_user_session_path) %>
      </li>

    <% end %>
 </ul>
</header>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
