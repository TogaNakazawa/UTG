<section class="container">
  <div class="row">
        <div class="main user-show col-md-4 offset-md-4">
        <div class="user">
          <%= image_tag("/user_images/#{@user.id}.jpg") %>

          <h2><%= @user.name %></h2>
          <p><%= @user.email %></p>
          <% if @user.id == @current_user.id %>
            <%= link_to "編集", edit_user_path%>
          <% end %>
        </div
        <div class="user_profile col-md-4 offset-md-4">
          <div class="profile_tag">
            <p><%= "Profile" %></p>
          </div>
      </div>
  </div>
</section>
