
<div class = "container-fluid">
  <div class = "row">
    <div class = "main-left col-md-4">
    </div>
    <div class = "main-center col-md-4">
      <div class= "user">

      <%@t.each do |member_name|%>
        <%if User.where(name:member_name).present?%>
          <%@user=User.find_by(name:member_name)%>
          <div class="users-index-item">
            <div class="user-left">
              <%= image_tag("/user_images/#{@user.image_name}") %>
            </div>
            <div class="user-right">
              <h2><%= "#{@user.name}"%></h2>
            </div>
          <div class="members?">
            <%=form_tag groups_path do%>
            <%= check_box_tag :confirm,1,true%>
            <%= hidden_field_tag :id, @group.id %>
            <%end%>
        <%else%>
          <%="No such a user."%>
        <%end%>
      <%end%>
      <%=form_tag groups_path(id:@group.id) do%>
       <%= submit_tag "Confirmed"%>
      <%end%>
      </div>
    </div>
  </div>
</div>
