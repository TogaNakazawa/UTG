<div class="container">
  <div class="row">
    <%= link_to "プロジェクトを作成する", new_project_url, class:"btn btn-lg btn-primary col-md-12", style:"width:100%;" %>
      <table class="project">
        <tbody>
          <tr>
            <th>
              プロジェクト名
            </th>
            <th>
              プロジェクト内容
            </th>
            <th>
              目標人数
            </th>
            <th>
              提唱者名
            </th>
          </tr>
          <% @projects.each do |project| %>
          <tr>
            <td>
              <%= link_to project.title, project_path(project) %>
            </td>
            <td>
              <%= project.content %>
            </td>
            <td>
            <%= project.required_number %>
            </td>
            <td>
            <% founder = User.find(project.founder_id)%>
            <%= founder.name %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
